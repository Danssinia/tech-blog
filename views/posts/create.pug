html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="../css/style.css")
    body 
    include ../partials/header
    main 
block content
  .create-container
    h2.create-title Create New Blog Post
    
    form.create-form(action="/blogs/create" method="POST")
      .form-group
        label(for="title") Title
        input#title(type="text" name="title" placeholder="Enter post title..." required)
      
      .form-group
        label(for="snippet") Snippet
        input#snippet(type="text" name="snippet" placeholder="Short description (shows in listings)..." required maxlength="200")
      
      .form-group
        label(for="body") Body
        textarea#body(name="body" rows="12" placeholder="Write your full blog post here..." required)
      
      button.create-submit(type="submit") Publish Post
div
      include ../partials/footer